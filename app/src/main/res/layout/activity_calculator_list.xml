                    android:layout_marginLeft="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:text="RD Calculator"
                    android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/sip"
                android:layout_width="match_parent"
